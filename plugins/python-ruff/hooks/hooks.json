{
    "description": "Auto-run ruff diagnostics after Python file edits",
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Edit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/check-python.sh",
                        "timeout": 10
                    }
                ]
            }
        ]
    }
}
