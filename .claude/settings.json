{
  "env": {
    "RIPGREP_CONFIG_PATH": "${HOME}/.ripgreprc"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${HOME}/Develop/claude-code/hooks/bash_command_validator.py"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ${HOME}/Develop/claude-code/hooks/file_protection.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "${HOME}/.claude/statusline-command.sh"
  },
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "ast-grep@ast-grep-marketplace": true,
    "frontend-design@claude-plugins-official": true,
    "lua-lsp@claude-plugins-official": true,
    "pyright-lsp@claude-plugins-official": true,
    "rust-analyzer-lsp@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "explanatory-output-style@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true
  },
  "marketplaces": [
    {
      "name": "claude-code-local-plugins",
      "source": "${HOME}/Develop/claude-code/"
    }
  ],
  "plugins": []
}
